{
  "schemaVersion": 1,
  "id": "scaffold",
  "version": "${version}",

  "name": "Scaffold",
  "description": "A Minecraft level editor",
  "authors": [
    "Igrium"
  ],
  "contact": {
    "homepage": "http://scaffoldeditor.org/",
    "sources": "https://github.com/Sam54123/scaffold-editor-mc"
  },

  "license": "MIT",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "org.scaffoldeditor.editormc.engine.ScaffoldServerMod"
    ],
    "client": [
      "org.scaffoldeditor.editormc.engine.ScaffoldEditorMod"
    ]
  },
  "mixins": [
    "scaffold.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "another-mod": "*"
  },

  "accessWidener": "scaffold.accesswidener"
}
